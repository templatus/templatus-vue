{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,

  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/tmp/**": true,
    "**/public/vite*": true
  },
  "files.exclude": {
    "**/docker-volumes": true
  },

  "search.exclude": {
    "**/tmp": true,
    "**/public/vite*": true,
    "**/node_modules": true
  },

  "jest.jestCommandLine": "yarn test",

  "eslint.validate": ["javascript", "vue"],

  "ruby.lint": {
    "rubocop": {
      "forceExclusion": true
    }
  },

  "[ruby]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}
